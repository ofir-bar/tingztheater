<?xml version="1.0" encoding="utf-8"?>
<!--Model for our items in the recyclerView-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movies_card_listview"
    android:orientation="vertical"
    android:background="#134A80"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="vertical"
            android:padding="14dp">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_dark_background"
                android:id="@+id/card_view_movie_title"
                android:text="@string/card_view_movie_title_default"/>
            <TextView
                android:textStyle="bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_dark_background"
                android:id="@+id/card_view_movie_release_year"
                android:text="@string/card_view_movie_release_year_default"/>
            <TextView
                android:textStyle="bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_dark_background"
                android:id="@+id/card_view_movie_rating"
                android:text="@string/card_view_movie_rating_default"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>